<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.LoginRegister.RegisterActivity"
    android:background="@color/video_play_editext_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:layout_toRightOf="@+id/back"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:text="注册账号"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/edt_name"
            android:hint=" 手机号码"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/registertab_edit"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="20dip"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_yzm"
                android:hint=" 验证码"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/registertab_edit"
                android:layout_weight="1"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_yzm"
                android:layout_width="90dip"
                android:layout_height="40dip"
                android:text="获取验证码"
                android:background="@drawable/ripple_registertab_btn"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginLeft="8dip" />

        </LinearLayout>

        <EditText
            android:id="@+id/edt_pwd"
            android:background="@drawable/registertab_edit"
            android:layout_marginTop="20dip"
            android:hint=" 设置密码"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:textSize="14sp" />

        <Button
            android:layout_marginTop="20dip"
            android:id="@+id/btn_reg"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:text="注册"
            android:background="@drawable/ripple_registertab_btn"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="13dip"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="注册即代表您已阅读并同意"/>

            <TextView
                android:id="@+id/btn_yhxy"
                android:textColor="@color/dark"
                android:textSize="13dip"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="用户使用协议"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>

