<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/complete_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></ListView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="18dp">

        <View
            android:id="@+id/red_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_bottom_select"></View>


        <View
            android:id="@+id/dark_view"
            android:layout_toRightOf="@+id/red_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/some_dark"></View>

        <LinearLayout
            android:id="@+id/space_total"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总空间: "/>
            <TextView
                android:id="@+id/total_space_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10G"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余空间: "/>
            <TextView
                android:id="@+id/spare_space_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10G"/>
        </LinearLayout>

    </RelativeLayout>





</LinearLayout>
